{
    "name": "Ixd-Template",
    "description": "Template for all future Ixudra projects.",
    "keywords": ["Ixudra", "Laravel"],

    "require": {
        "laravel/framework": "4.1.*",
        "ixudra/validation": "0.1.*",
        "laracasts/presenter": "0.1.*",
        "phpunit/phpunit": "4.0.*"
    },

    "require-dev": {
        "mockery/mockery": "dev-master",
        "phpunit/phpunit": "4.0.*",
        "codeception/codeception": "dev-master"
    },

    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/presenters",
            "app/repositories",
            "app/services",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/unit/base"
        ]
    },

    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "stable"
}
