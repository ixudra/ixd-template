{
    "name": "Ixd-Template",
    "description": "Template for all future Ixudra projects.",
    "keywords": ["Ixudra"],

	"require": {
		"laravel/framework": "4.0.*",
		"phpunit/phpunit": "3.7.*"
	},

    "require-dev": {
        "mockery/mockery": "dev-master"
    },

	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
            "app/ixudra",
			"app/models",
			"app/repositories",
			"app/services",
			"app/database/migrations",
			"app/database/seeds",
            "app/tests/base/BaseTestCase.php",
            "app/tests/base/BaseRepositoryTestCase.php",
            "app/tests/base/BaseViewFactoryTestCase.php"
		]
	},

    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },

	"config": {
		"preferred-install": "dist"
	},

	"minimum-stability": "dev"
}
