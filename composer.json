{
    "name": "Ixd-Template",
    "description": "Template for all future Ixudra projects.",
    "type": "project",
    "keywords": [
        "Ixudra",
        "Laravel"
    ],
    "license": "MIT",

    "authors": [
        {
            "name": "Jan Oris",
            "email": "jan.oris@ixudra.be"
        }
    ],

    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "illuminate/html": "~5.0",
        "ixudra/core": "5.*",
        "ixudra/validation": "1.*",
        "ixudra/translation": "5.*",
        "laracasts/presenter": "0.2.*",
        "rap2hpoutre/laravel-log-viewer": "0.*"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "mockery/mockery": "~0.9",
        "fzaninotto/faker": "~1.4",
        "filp/whoops": "~1.0",
        "phpspec/phpspec": "~2.1",
        "codeception/codeception": "2.*",
        "codeception/c3": "2.*",
        "ixudra/generators": "5.*",
        "barryvdh/laravel-debugbar": "2.*",
        "barryvdh/laravel-ide-helper": "2.*"
    },

    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },

    "autoload-dev": {
        "classmap": [
            "tests/unit/base",
            "tests/functional/base",
            "tests/acceptance/base"
        ]
    },

    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan ide-helper:generate",
            "Codeception\\c3\\Installer::copyC3ToRoot"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "stable"
}
